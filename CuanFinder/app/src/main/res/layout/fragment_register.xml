<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="91dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Hello!"
        android:textColor="@color/black"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005" />

    <View
        android:id="@+id/view"
        android:layout_width="183dp"
        android:layout_height="162dp"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/sign_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="392dp"
        android:src="@drawable/logo_awal"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintVertical_bias="0.478" />

    <View
        android:id="@+id/regis"
        android:layout_width="412dp"
        android:layout_height="402dp"
        android:background="@drawable/register_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/regis"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="37dp"
        android:background="@drawable/username"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="38dp"
        android:textColor="#94959B"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/regis"
        app:layout_constraintEnd_toEndOf="@+id/regis"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/regis"
        app:layout_constraintTop_toBottomOf="@+id/textRegister"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText00"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/username"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="38dp"
        android:textColor="#94959B"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/regis"
        app:layout_constraintEnd_toEndOf="@+id/regis"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/regis"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText100"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/username"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="38dp"
        android:textColor="#94959B"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/regis"
        app:layout_constraintTop_toBottomOf="@+id/editText00"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="@+id/regis"
        app:layout_constraintTop_toBottomOf="@+id/editText100"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textRegister22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/poppins"
        android:text="I accept the policy and the terms"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/regis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.168"
        app:layout_constraintStart_toEndOf="@+id/textView55"
        app:layout_constraintTop_toBottomOf="@+id/editText100"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="49dp"
        android:background="@drawable/email_shape"
        android:paddingHorizontal="59dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/regis"
        app:layout_constraintEnd_toEndOf="@+id/regis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRegister22" />


</androidx.constraintlayout.widget.ConstraintLayout>